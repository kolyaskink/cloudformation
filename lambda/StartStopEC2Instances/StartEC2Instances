import boto3


region = 'us-west-2'

# GamesJenkinsStudioTemplateWindowsSlave2, GamesJenkinsStudioTemplateWindowsSlave1
# GamesJenkinsStudioTemplate, GamesFastlane
instances = ['i-06d6e9f4f70752caf', 'i-01d4fbbceb47dd68b', 'i-047ce1ebf30318dba', 'i-002268b7f1479c019']

 

def lambda_handler(event, context):

    ec2 = boto3.client('ec2', region_name=region)

    ec2.start_instances(InstanceIds=instances)

    print 'stopped your instances: ' + str(instances)